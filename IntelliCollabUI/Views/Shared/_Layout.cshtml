<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap5.2.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/all.min.css" rel="stylesheet" />
    <script src="~/lib/moment.js/moment.min.js"></script>
    <script src="~/Script/jquery-3.4.1.min.js"></script>
    <script src="~/Script/popper.min.js"></script>
    <script src="~/Content/bootstrap5.2.3/js/bootstrap.min.js"></script>
    <script src="~/Content/font-awesome/js/all.min.js"></script>
    <script src="~/Content/canvasjs/canvasjs.min.js"></script>
</head>
<body>
    
    <!--Don't edit this page its a setting page-->
    @if (ViewBag.IsLogInOrRegPg == null || (ViewBag.IsLogInOrRegPg != null && !ViewBag.IsLogInOrRegPg))
    {
        <nav class="navbar navbar-expand-lg navbar-dark dark-theme fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><span class="h1 text-light">I</span><span>ntellcolab</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "DashBoard", new { }, new { @class = "nav-link active" })
                        </li>
                        @if (Session["UserRole"] != null && (Session["UserRole"].ToString().Equals("F") || Session["UserRole"].ToString().Equals("A")))
                        {
                            <!--<li class="nav-item">
                                @Html.ActionLink("Personal Information", "PersonalInfo", "UserManagement", new { }, new { @class = "nav-link" })
                            </li>-->

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Faculty
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>@Html.ActionLink("Faculty Information", "FacultyInfo", "Faculty", new { }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Faculty Department", "Faculty", "Faculty", new { }, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Student", "StudentInfo", "Student", new { }, new { @class = "nav-link" })
                            </li>
                            <!--<li class="nav-item">
                                @Html.ActionLink("Digital Library", "DigitalLibraryDashBoard", "DigitalLibrary", new { }, new { @class = "nav-link" })
                            </li>-->
                            <li class="nav-item">
                                @Html.ActionLink("Attendance", "Attendance", "UserManagement", new { }, new { @class = "nav-link" })
                            </li>
                            <!--<li class="nav-item">
                                @Html.ActionLink("Events", "CalendarView", "UserManagement", new { }, new { @class = "nav-link" })
                            </li>-->
                            <!--<li class="nav-item">
                                @Html.ActionLink("Results", "Results", "UserManagement", new { }, new { @class = "nav-link" })
                            </li>-->
                         } 
                    </ul>

                    @if (Session["UserName"] != null)
                    {
                        <span class="navbar-text me-2">
                            @Session["UserName"].ToString()
                        </span>
                        <span class="navbar-text me-2 btn">
                            <a href="@Url.Action("logOut","LogIn")" class="nav-link"><i class="fa fa-power-off"></i> log out</a>
                            @*@Html.ActionLink("log out", "logOut", "LogIn", new { }, new { @class = "nav-link" })*@
                        </span>
                    }
                </div>

            </div>
        </nav>
    }

<div class="container-fluid body-content mb-6 pt-6">
    @*<video autoplay loop muted class="back-video" src="~/Content/Images/liveLoop.webm"></video>*@
    @RenderBody()
    <div class="footer bg-dark text-white">
        <footer>
            <p>&copy; @DateTime.Now.Year - IntelliCollab</p>
        </footer>
    </div>
</div>
    <div class="toast align-items-center text-white bg-primary border-0 " role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                Hello, world! This is a toast message.
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
    <script>
        
        var toast = new bootstrap.Toast($('.toast'), "animation");
        function show(msg) {
            $('.toast-body').text(msg);
            toast.show();
        }
    </script>
</body>
</html>